{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"],
    }
  }
}
